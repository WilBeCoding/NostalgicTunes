extends ../layout

block content
    h1=playlist.playlist
    br
    h2 A playlist for #{recipient.name}
    br
    p
      a(href='/users/realaddasong/' + playlist._id) Add A Song!
    div
      table.table.table-bordered
        th Artist
        th Song
        for song in songs
          tr
            td=song.artist
            td=song.name